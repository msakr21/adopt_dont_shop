<% if pending.length > 0 %>
<div id="pending">
  <h3> Pets Pending Decision: </h3>
  <% pending.each do |application| %>
    <p> 
      <div id="pending-<%= application.pet.name %>">
      <%= application.pet.name %>
      <%= render partial: 'form', locals: {path: "/admin/applications/#{app.id}", method: :patch, app_pet_id: application.pet_id, key: :approved, decision: "Approve"} %>
      <%= render partial: 'form', locals: {path: "/admin/applications/#{app.id}", method: :patch, app_pet_id: application.pet_id, key: :rejected, decision: "Reject"} %>
      </div> 
    </p>
  <% end %>
</div>
<% end %>
<% if  approved.length > 0%>
<div id="approved">
  <h3> Approved Pets: </h3>
  <% approved.each do |application| %>
    <p> <%= application.pet.name %> </p>
  <% end %>
</div>
<% end %>
<% if  rejected.length > 0%>
<div id="rejected">
  <h3> Rejected Pets: </h3>
  <% rejected.each do |application| %>
    <p> <%= application.pet.name %> </p>
  <% end %>
</div>
<% end %>